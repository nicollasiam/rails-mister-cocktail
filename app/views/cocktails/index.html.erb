<div class="jumbotron" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path :LOGO, height: 500, crop: :fill %>')">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">Awesome cocktails for awesome parties!</h1>
      </div>

      <div class="col-xs-4 col-xs-offset-4">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for a Cocktail">
          <span class="input-group-btn">
              <button class="btn btn-default" type="button">Taste!</button>
          </span>
        </div><!-- /input-group -->
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-4">
        <div class="card">
          <%= cl_image_tag cocktail.photo %>
          <%= link_to "", cocktail_path(cocktail) %>
          <h3><%= cocktail.name %></h3>
        </div>
      </div>
    <% end %>

  </div>
</div>
