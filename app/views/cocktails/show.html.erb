<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="text-center">
  <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="fa fa-plus"></i>
  <% end %>
</div>

<br>

<table class="table table-striped table-condensed table-hover">
  <% @doses.each do |dose| %>
    <tr>
      <td><%= dose.amount %></td>
      <td><%= dose.description %></td>
      <td><%= dose.ingredient.name %></td>
      <td>
          <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
            <i class="fa fa-pencil"></i>
          <% end %>

          <%= link_to cocktail_dose_path(@cocktail, dose), method: 'delete' do %>
            <i class="fa fa-trash"></i>
          <% end %>
      </td>
    </tr>
  <% end %>
</table>
